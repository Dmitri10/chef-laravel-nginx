<% @servers.each do |name, settings| %>
server {
  listen       80;
  server_name  <%= settings['hosts'] %>;
  root         <%= settings['root'] %>;
  access_log   /var/log/nginx/<%= name %>.access.log;
  error_log    /var/log/nginx/<%= name %>.error.log;
  include      /etc/nginx/wordpress.conf;
}
<% end %>
