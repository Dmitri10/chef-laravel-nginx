<% @servers.each do |name, settings| %>
server {
  listen       80;
  server_name  <%= settings['hosts'] %>;
  root         <%= settings['root'] %>;
  access_log   <%= node['nginx']['log_dir'] %>/<%= name %>.access.log;
  error_log    <%= node['nginx']['log_dir'] %>/<%= name %>.error.log;
  include      /etc/nginx/wordpress.conf;
}
<% end %>
