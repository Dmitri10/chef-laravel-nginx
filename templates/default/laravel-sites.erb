<% if @ssl_certificate && @ssl_certificate_key %>
server {
  listen       443;
  ssl          on;
  ssl_certificate        <%=@ssl_certificate%>;
  ssl_certificate_key    <%=@ssl_certificate_key%>;
  ssl_session_cache shared:SSL:10m;
  ssl_session_timeout 3m;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers !aNULL:!eNULL:FIPS@STRENGTH;
  ssl_prefer_server_ciphers on;
  server_name  <%= @host %>;
  root         <%= @root %>;
  access_log   <%= node['nginx']['log_dir'] %>/<%= @name %>.access.log;
  error_log    <%= node['nginx']['log_dir'] %>/<%= @name %>.error.log;
  rewrite_log  on;
  index        index.php;

  <% if @cache_images %>
  # Image cache headers
  location ~* \.(png|jpg|jpeg|gif)$ {
    expires 30d;
    log_not_found off;
  }
  <% end %>

  location / {
    try_files $uri $uri/ /index.php?$query_string;
  }

  <% if @code -%>
  <%= @code %>
  <% end -%>

  include <%= node['nginx']['dir'] %>/laravel.conf;
}

server {
  listen       80;
  server_name  <%= @host %>;
  rewrite     ^   https://$server_name$request_uri? permanent;
}
<% else %>
server {
  listen       80<% if @cache_images %> default_server<% end %>;
  server_name  <%= @host %>;
  root         <%= @root %>;
  access_log   <%= node['nginx']['log_dir'] %>/<%= @name %>.access.log;
  error_log    <%= node['nginx']['log_dir'] %>/<%= @name %>.error.log;
  rewrite_log  on;
  index        index.php;

  <% if @cache_images %>
  # Image cache headers
  location ~* \.(png|jpg|jpeg|gif)$ {
    expires 30d;
    log_not_found off;
  }
  <% end %>

  location / {
    try_files $uri $uri/ /index.php?$query_string;
  }

  <% if @code -%>
  <%= @code %>
  <% end -%>

  include <%= node['nginx']['dir'] %>/laravel.conf;
}
<% end %>